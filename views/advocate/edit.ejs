<% layout('layouts/boilerplate.ejs') %>
<h1 class="text-center">Edit Advocate Profile</h1>

<form
    class="container d-flex flex-column align-items-center needs-validation"
    action="/advocates/<%= advocate._id %>?_method=PUT"
    method="POST"
    novalidate
>
    <div class="w-75 mb-2">
        <label class="form-label" for="name">Name</label>
        <input
            class="form-control"
            type="text"
            id="name"
            name="advocate[name]"
            value="<%= advocate.name %>"
            required
        />
        <div class="invalid-feedback">Please fill this fiels</div>
        <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="w-75 mb-2">
        <label class="form-label" for="location">Location</label>
        <input
            class="form-control mb-2"
            type="text"
            id="location"
            name="advocate[location]"
            value="<%= advocate.location %>"
            required
        />
        <div class="invalid-feedback">Please fill this fiels</div>
        <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="w-75 mb-2">
        <label class="form-label" for="speciality">Speciality</label>
        <input
            class="form-control mb-2"
            type="text"
            id="speciality"
            name="advocate[speciality]"
            value="<%= advocate.speciality %>"
            required
        />
        <div class="invalid-feedback">Please fill this fiels</div>
        <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="w-75 mb-2">
        <label class="form-label" for="experience">Experience</label>
        <input
            class="form-control mb-2"
            type="text"
            id="experience"
            name="advocate[experience]"
            value="<%= advocate.experience %>"
            required
        />
        <div class="invalid-feedback">Please fill this fiels</div>
        <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="w-75 mb-2">
        <label class="form-label" for="email">E-Mail</label>
        <input
            class="form-control mb-2"
            type="email"
            id="email"
            name="advocate[email]"
            value="<%= advocate.email %>"
            required
        />
        <div class="invalid-feedback">Please fill this fiels</div>
        <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="w-75 d-flex align-items-center justify-content-between mb-3">
        <button
            class="btn btn-warning d-flex align-items-center justify-content-center gap-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-pencil-square"
                viewBox="0 0 16 16"
            >
                <path
                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path
                    fill-rule="evenodd"
                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                />
            </svg>
            Update Advocate
        </button>
        <a
            class="btn btn-dark d-flex align-items-center justify-content-center gap-2"
            href="/advocates/<%= advocate._id %>"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-arrow-left-short"
                viewBox="0 0 16 16"
            >
                <path
                    fill-rule="evenodd"
                    d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5"
                /></svg
            >Back to <%= advocate.name %>'s Profile</a
        >
    </div>
</form>
